extends ../base

block vars
    - var page = 'activities';

block main-content

    section.artcl
        .wrapper.nr
            h1.artcl__title.scroll-block.js-scroll-block(data-text="true") Деятельность
            .artcl__text
                .interlinear Мы специализируемся на выращивании злаков, овощей и животных

    section.mb_140
        .wrapper.nr
            .gr.col-2
                div.full.trigger.trigger-default(data-trigger-type="scroll")
                    h2.title Выращивание
                    slider-component.slider(
                        data-id="slider-career"
                        data-focusable="true"
                        data-touch="true"
                        data-draggable="true"
                        data-resize="true")
                        - var values = ['Одна из основных отраслей в сельском хозяйстве', 'Одна из основных отраслей в сельском хозяйстве', 'Одна из основных отраслей в сельском хозяйстве'];

                        each val in values
                            .slide
                                picture
                                    source(srcset="")
                                    img(src="./static/career/slider.png")
                                .slideInfo
                                    .slideInfo__title.interlinear= val
                                    p.slideInfo__text.p_md Направление сельского хозяйства, занимающаяся возделыванием культурных растений.
                                    a.slideInfo__btn.btn.green.btn_def.btn_flex(is="inner-link" href="growing.html")
                                        .button__text Подробнее

                    .slider-controls
                        .slider-progress
                            slider-progress(data-id="slider-career")
                                - for (var i = 0; i < 3; i++)
                                    .item

                        .slider-buttons
                            button.slider__control.arr(is="slider-control" data-id="slider-career" data-to="prev")
                                svg(width="26" height="20" viewBox="0 0 26 20" fill="none")
                                    use(xlink:href="#slider-arr")
                            button.slider__control.arr(is="slider-control" data-id="slider-career" data-to="next")
                                svg(width="26" height="20" viewBox="0 0 26 20" fill="none")
                                    use(xlink:href="#slider-arr")

                article.cardPreview.trigger.trigger-default(data-trigger-type="scroll")
                    a.cardPreview__link(href="" is="inner-link")
                    .cardPreview__imageWrapper
                        picture.picture
                            source(srcset="" type="image/webp")
                            img(src="./static/career/career-1.png")
                    .cardPreview__header
                        h2.cardPreview__name Хранение и подработка
                        .cardPreview__button.btn.btn_sq
                            svg.ico(width="8" height="15" fill="none")
                                use(xlink:href="#arr-s")

                article.cardPreview.trigger.trigger-default(data-trigger-type="scroll")
                    a.cardPreview__link(href="" is="inner-link")
                    .cardPreview__imageWrapper
                        picture.picture
                            source(srcset="" type="image/webp")
                            img(src="./static/career/career-4.png")
                    .cardPreview__header
                        h2.cardPreview__name Трейдинг
                        .cardPreview__button.btn.btn_sq
                            svg.ico(width="8" height="15" fill="none")
                                use(xlink:href="#arr-s")

                article.cardPreview.trigger.trigger-default(data-trigger-type="scroll")
                    a.cardPreview__link(href="" is="inner-link")
                    .cardPreview__imageWrapper
                        picture.picture
                            source(srcset="" type="image/webp")
                            img(src="./static/career/career-2.png")
                    .cardPreview__header
                        h2.cardPreview__name Инновационные<br>технологии
                        .cardPreview__button.btn.btn_sq
                            svg.ico(width="8" height="15" fill="none")
                                use(xlink:href="#arr-s")

                article.cardPreview.trigger.trigger-default(data-trigger-type="scroll")
                    a.cardPreview__link(href="digital-system.html" is="inner-link")
                    .cardPreview__imageWrapper
                        picture.picture
                            source(srcset="" type="image/webp")
                            img(src="./static/career/career-3.png")
                    .cardPreview__header
                        h2.cardPreview__name Цифровизация систем <br>управления
                        .cardPreview__button.btn.btn_sq
                            svg.ico(width="8" height="15" fill="none")
                                use(xlink:href="#arr-s")
