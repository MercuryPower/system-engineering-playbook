extends ../base

block vars
    - var page = 'news';

block main-content

    section.artcl
        .wrapper.nr
            h1.artcl__title.scroll-block.js-scroll-block(data-text="true") Новости

    section.mb_60
        .wrapper.nr
            .filters.mb_40
                date-component.filter(data-href="?filter[date]=0~100")
                    p.caption За период
                    input.input.lightgreen(type="text")
                    svg.ico(width="19" height="20" fill="none")
                        <rect x="1" y="2.842" width="17" height="16.105" rx="2" stroke="#4E8925" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M5.474 11.44l3.02 3.034 5.032-5.369M9.053 4.632v-3.58M13.526 4.632v-3.58M4.579 4.632v-3.58" stroke="#4E8925" stroke-linecap="round" stroke-linejoin="round"/>

            .filter-buttons.filter-buttons_news
                a.filter.btn_round(is="filter-link" data-mode="include" href="filter[auto]=tractors") Актуальное
                a.filter.btn_round(is="filter-link" data-mode="include" href="filter[auto]=sowing-technology") Инновации
                a.filter.btn_round(is="filter-link" data-mode="include" href="filter[auto]=harvesting-equipment") Мероприятия
                a.filter.btn_round(is="filter-link" data-mode="include" href="filter[auto]=tillage") Успехи
                a.filter.btn_round(is="filter-link" data-mode="include" href="filter[auto]=sprayers") Техника
                a.filter.btn_round(is="filter-link" data-mode="include" href="filter[auto]=spreaders") Интервью
                a.filter.btn_round(is="filter-link" data-mode="include" href="filter[auto]=spreaders") Безопасность производства
                a.filter.btn_round(is="filter-link" data-mode="include" href="filter[auto]=spreaders") Социальная ответственность
            button.filter.filter-reset.link_g(is="filters-reset" data-names=["auto", "date"] data-container="replaceable-filter")
                        .ico-close.s
                        p Очистить фильтр


    section.mb_120
        .wrapper.nr
            .replaceable-filter.container.col-2.leaders.mb_80(data-id="catalog")
                - for (var i = 0; i < 6; i++)
                    article.cardNews.trigger.trigger-default(data-trigger-type="scroll")
                        a.cardNews__link(is="inner-link" href="piece-of-news_2_level.html")
                        .cardNews__imageWrapper
                            picture
                                source(srcset="")
                                img(src="./static/career/career-2.png")
                        .cardNews__body
                            .cardNews__date
                                p 12 июня
                                .dot
                                a Мероприятия
                            .cardNews__text
                                p Начали проводить занятия для дошкольников по образованию в сфере сельского хозяйства.

                    article.cardNews.trigger.trigger-default(data-trigger-type="scroll")
                        a.cardNews__link(is="inner-link" href="piece-of-news_2_level.html")
                        .cardNews__imageWrapper
                            picture
                                source(srcset="")
                                img(src="./static/career/career-2.png")
                        .cardNews__body
                            .cardNews__date
                                p 23 мая
                                .dot
                                a Актуальное
                            .cardNews__text
                                p Начали проводить занятия для дошкольников по образованию в сфере сельского хозяйства.
            .load-more.flex
                a.load-more__all.btn.btn_def.green(is="load-more" id="load-more-button" href="/news.html?page=2" data-link-container="replaceable-filter")
                    p.btn__text Загрузить еще
                    svg.ico(width="24" height="21" fill="none")
                        path(d="M21.094 10.5a9 9 0 00-16.5-4.977m-1.5 4.977a9 9 0 0016.484 5" stroke="#4E8925" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
                        path(d="M4.008 1.5l.307 4.335L8.508 6M20.879 18.965l-.307-4.335-4.193-.165" stroke="#4E8925" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
