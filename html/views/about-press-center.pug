extends ../base

block vars
    - var page = 'news';

block main-content

    section.artcl
        .wrapper.nr
            h1.artcl__title.scroll-block.js-scroll-block(data-text="true") Пресса о нас

    section.mb_60
        .wrapper.nr
            .filters.flex.aic.mb_40
                date-component.filter
                    p.caption За период
                    input.input.lightgreen(type="text")
                    svg.ico(width="19" height="20" fill="none")
                        <rect x="1" y="2.842" width="17" height="16.105" rx="2" stroke="#4E8925" stroke-linecap="round" stroke-linejoin="round"/>
