                button.filter.filter-reset.link_g(is="filters-reset" data-names=["auto", "date"] data-container="replaceable-filter")
                    .ico-close.s
                    p Очистить фильтр


    section.mb_120
        .wrapper.nr
            .replaceable-filter.container.col-2.leaders.mb_80(data-id="catalog")
                - for (var i = 0; i < 6; i++)
                    article.cardNews.trigger.trigger-default(data-trigger-type="scroll")
                        a.cardNews__link(is="inner-link" href="piece-of-news_2_level.html")
                        .cardNews__imageWrapper
                            picture
                                source(srcset="")
                                img(src="./static/career/career-2.png")
                        .cardNews__body
                            .cardNews__date
                                p 12 июня
                                .dot
                                a Мероприятия
